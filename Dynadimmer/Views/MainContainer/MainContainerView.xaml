<UserControl xmlns:LampItem="clr-namespace:Dynadimmer.Views.LampItem"  xmlns:MonthItem="clr-namespace:Dynadimmer.Views.MonthItem"  x:Class="Dynadimmer.Views.MainContainer.MainContainerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dynadimmer.Views.MainContainer"
             mc:Ignorable="d"  d:DesignWidth="600"  d:DesignHeight="600"  >
    <ScrollViewer  Padding="10" VerticalScrollBarVisibility="Auto">
        <StackPanel Name="lampContainer">
            <TextBlock Padding="5" Background="#efefef" FontSize="20" FontWeight="ExtraBold" TextAlignment="Center" Visibility="{Binding ItemVisable}" Text="{Binding LampCount, StringFormat=Total Number Of Lamps: \{0\}}"></TextBlock>
            <LampItem:LampView LampIndex="0" />
            <LampItem:LampView LampIndex="1" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
